<div class="container-fluid category-main">
  <div id="category-header">
    <img class="d-block w-100" src="http://via.placeholder.com/1440x400">
    <div class="category-overlay text-center">			
			<div class="category">
        {.section collection}
        <h1>{title}</h1>
        {.equal?:urlId:"blog"}
        <p>Local stories, promotions, and sponsorships</p>
        {.end}
        {.end}
        <squarespace:navigation navigationId="siteNav" template="sub-navigation" />
<!--				<ul class="nav justify-content-center">
					<li class="nav-item">
						<a class="nav-link" href="#"><h3>ALL</h3></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#"><h3>LOCAL</h3></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#"><h3>NATIONAL</h3></a>
					</li>
				</ul> -->
      </div>
    </div>
  </div>
  <div class="category-content">
    <div class="container">
      <div class="row">
        <squarespace:query collection="{.section collection}{urlId}{.end}" featured="true" limit="1">
        <div class="col-12 col-md-8">
        {.section items}
          {.section 0}
            {.main-image?}
          <a href={fullUrl}>
            <img {@|image-meta} class="img-fluid" />
          </a>
            {.or}
            <img src="http://via.placeholder.com/618x413" class="img-fluid" />
            {.end}
        </div>
        <div class="col-12 col-md-4 featured-post">
	
        <img src="../assets/tag-national.png">
        
          <script>console.log({@|json-pretty})</script>  
          <p class="featured-post-title">{title}</p>
          
          <p class="supporting-copy">{body|safe|truncate 400}</p>
          
          <a class="btn" href={fullUrl} role="button">READ MORE</a>
          {.end}
            
        {.end}

        </squarespace:query>

        </div>
      </div>
      <div class="card-deck">
    {.repeated section items}
        <div class="card border-0">
      {.main-image?}
          <div class="content-fill">
            <img {@|image-meta} />
          </div>
      {.end}
          <div class="post-tag-wrapper">
            <img src="../assets/tag-national.png">
          </div>
          <div class="card-body article">
            <p class="card-title">{title}</p>
            <p class="card-text">{body|safe|truncate 350}</p>
            <a href={fullUrl}><span class="article-read-more">READ MORE â‡¾</span></a>
          </div>
        </div>
        
      {.equal? @index 3}
      </div> 
      <div class="card-deck">

      {.end}
    {.end}
      </div>
      <div class="see-older-wrapper text-center">
        <a class="btn" href={.section pagination}{nextPageUrl}{.end} role="button">SEE OLDER</a>
      </div>
    </div>
  </div>
</div>
