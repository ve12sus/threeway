<div class="container-fluid category-main">
  <div id="category-header" class="news">
    <!-- <img src="http://via.placeholder.com/1440x400"> -->
    <div class="category-overlay text-center">
			<div class="category">
        {.section collection}
        <h1>{title}</h1>
        {.equal?:urlId:"blog"}
        <p>Local stories, promotions, and sponsorships</p>
        {.end}
        {.end}
        <squarespace:navigation navigationId="siteNav" template="sub-navigation" />
<!--				<ul class="nav justify-content-center">
					<li class="nav-item">
