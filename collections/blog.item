{.var @collectionName collection.urlId}
{.section item}

  <!--WRAPPER-->
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
    <div class="container-fluid">
      <div id="post-header" style="background-image: url({assetUrl})"></div>
    </div>
    <div class="container">
      <!--POST TAG-->
      <script>console.log({@collectionName|json-pretty});</script>
  {.equal?:@collectionName:"news"}
    {.repeated section categories}
      {.equal?:@:"Local"}
       <img src="/assets/tag-local@2x.png" alt="local tag">
      {.end}   
      {.equal?:@:"National"}
       <img src="/assets/tag-national@2x.png" alt="national tag">
      {.end} 
    {.end}
  {.end}
  {.equal?:@featuredCol:"food"}
      <img src="/assets/tag-food@2x.png" alt="food tag">
  {.end}
  {.equal?:@featuredCol:"people"}
      <img src="/assets/tag-people@2x.png" alt="people tag">
  {.end}  
  {.equal?:@featuredCol:"events"}
    {.repeated section categories}
      {.equal?:@:"Local"}
      <img src="/assets/tag-events-local@2x.png" alt="events local tag">
      {.end}   
      {.equal?:@:"National"}
      <img src="/assets/tag-events-national@2x.png" alt="events national tag">
      {.end} 
    {.end}
  {.end}
      !<--<img src="/assets/tag-national.png" class="post-tag">-->
      <!--POST TILE-->
      <p class="title" data-content-field="title">
        {.passthrough?}
          <a href="{sourceUrl}" target="_blank">{title}</a>
        {.or}
          {title}
        {.end}
      </p>

      <!--AUTHOR AND DATE-->
      <!--<p class="meta">
        <a href="{fullUrl}" class="permalink"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a>
      </p>-->

      <hr class="d-none d-sm-block post-divider">

      <!--MAIN CONTENT-->
      {body}

      <!--BLOG INJECTION-->
      {postItemInjectCode}

      <!--CATEGORIES-->
      <!--{.repeated section categories}
        <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
      {.end}-->

      <!--TAGS-->
      <!--{.repeated section tags}
        <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
      {.end}-->

      <!--SHARE AND LIKE-->
      <!--{@|like-button}
      {@|social-button}-->


      <!--LOCATION-->
      <!--{.section location}
        {.section addressTitle}
          {addressTitle}
          {addressLine1}
          {addressLine2}
          {addressCountry}
        {.end}
      {.end}-->

      <!--COMMENTS-->
      <!--{@|comments}-->
    </div>
  </article>

{.end}


<!--PAGINATION-->
{.section pagination}
  <nav class="blog-item-pagination">

    <!--NEWER PAGE-->
    <!--{.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}-->

    <!--OLDER PAGE-->
    <!--{.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}-->

  </nav>
{.end}
